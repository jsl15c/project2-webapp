<html>
<head>
  <link rel="stylesheet" href="stylesheets/global.min.css" />
  <link rel="stylesheet" href="stylesheets/dashboard.min.css" />
</head>
<section class="dashboard-section">
  <h2>Welcome <strong><%= currentUser.firstName %></strong>!</h2>
  <div class="col col-1-2">
    <div class="dashleft">
    <form action="/dashboard" method="post">
      <label for="journal-input"></label>
      <textarea name="userEntry" id="journal-input"
      placeholder="How was your day?" onfocus="placeholder=''" onblur="placeholder='How was you day?'"></textarea>
      <button class="journal=submit">
        <i class="fa fa-plus" aria-hidden="true"></i>
      </button>
    </form>
    <div class="improvement-box">
      <h3>IMPROVEMENT</h3>

    </div>
  </div>
</div>
  <div class="col col-1-2">
    <div class="profile-box">
      <div class="profile-head">

        <!-- <img src="images/headshot.png" /> -->
        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
        <p class="bio-name">
          <%= currentUser.firstName + " " + currentUser.lastName %>
        </p>
      </div>

    </div>

  </div>
</section>
</html>
